<div data-controller="displayevent">
  <div class="fitmate-container">
    <div class="fitmate-search" >
      <div class="col-sm-8 my-3" >
        <%= form_with url: events_path, method: :post, class: "d-flex" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "üîç Which sport ? Which location ?"
          %>
          <%= submit_tag "Search", name: "", class: "btn-submit" %>
        <% end %>
      </div>
    </div>
    <div id='map' style='width: 100%; height: 422px;' data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_FIT_MATE'] %>">
    </div>
    <%# PSEUDO CODE FILTRE %>
    <%# filtres : event_level, sport %>
    <div>
      <form id="filter-form">
        <label for="filter-category">Cat√©gorie :</label>
        <select id="filter-category">
          <option value="">Tous les sports</option>
          <option value="boxing">Boxing</option>
          <option value="running">Running</option>
        </select>
        <button type="submit">Filtrer</button>
      </form>
    </div>


  <%# mini card sur  %>
  <div class="big-container">

  </div>
    <% @events.each do |event| %>
      <div class="card-container d-flex align-items-center" data-displayevent-target= "card"</div>>
        <%= cl_image_tag event.photo.key, class:"image" %>
        <div class="card-infos">
          <div class="card-infos-details d-flex align-items-center mb-3">
            <%= image_tag("#{event.sport}.png", class: "pictogram-sports") %>
            <%= event.title %>
          </div>
          <div class="card-infos-details d-flex align-items-center">
            <%= image_tag("place_small_card.png", class: "pictogram") %>
            <%= event.localisation.split(" ").last %>
          </div>
        </div>
      </div>
    <% end %>

  </div>


  </div>
</div>
